<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/overall_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GameActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/game_background">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/tableau1"
                        android:layout_width="50dp"
                        android:layout_height="650dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:clickable="false"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageButton
                                android:id="@+id/spot_tb1"
                                android:layout_width="45dp"
                                android:layout_height="65dp"
                                android:layout_weight="1"
                                android:contentDescription="TODO"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/spot" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/tableau2"
                        android:layout_width="50dp"
                        android:layout_height="650dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:clickable="false"
                        android:orientation="vertical"
                        app:layout_constraintStart_toEndOf="@+id/tableau1"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageButton
                                android:id="@+id/spot_tb2"
                                android:layout_width="45dp"
                                android:layout_height="65dp"
                                android:layout_weight="1"
                                android:contentDescription="TODO"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/spot" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/tableau3"
                        android:layout_width="50dp"
                        android:layout_height="650dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:clickable="false"
                        android:orientation="vertical"
                        app:layout_constraintStart_toEndOf="@+id/tableau2"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageButton
                                android:id="@+id/spot_tb3"
                                android:layout_width="45dp"
                                android:layout_height="65dp"
                                android:layout_weight="1"
                                android:contentDescription="TODO"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/spot" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/tableau4"
                        android:layout_width="50dp"
                        android:layout_height="650dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:clickable="false"
                        android:orientation="vertical"
                        app:layout_constraintStart_toEndOf="@+id/tableau3"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageButton
                                android:id="@+id/spot_tb4"
                                android:layout_width="45dp"
                                android:layout_height="65dp"
                                android:layout_weight="1"
                                android:contentDescription="TODO"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/spot" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/tableau5"
                        android:layout_width="50dp"
                        android:layout_height="650dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:clickable="false"
                        android:orientation="vertical"
                        app:layout_constraintStart_toEndOf="@+id/tableau4"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageButton
                                android:id="@+id/spot_tb5"
                                android:layout_width="45dp"
                                android:layout_height="65dp"
                                android:layout_weight="1"
                                android:contentDescription="TODO"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/spot" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/tableau6"
                        android:layout_width="50dp"
                        android:layout_height="650dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:clickable="false"
                        android:orientation="vertical"
                        app:layout_constraintStart_toEndOf="@+id/tableau5"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageButton
                                android:id="@+id/spot_tb6"
                                android:layout_width="45dp"
                                android:layout_height="65dp"
                                android:layout_weight="1"
                                android:contentDescription="TODO"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/spot" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/tableau7"
                        android:layout_width="50dp"
                        android:layout_height="650dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:clickable="false"
                        android:orientation="vertical"
                        app:layout_constraintStart_toEndOf="@+id/tableau6"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageButton
                                android:id="@+id/spot_tb7"
                                android:layout_width="45dp"
                                android:layout_height="65dp"
                                android:layout_weight="1"
                                android:contentDescription="TODO"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/spot" />
                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/bottomLayout"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <ImageButton
                                android:id="@+id/spot_deck"
                                android:layout_width="45dp"
                                android:layout_height="65dp"
                                android:layout_weight="1"
                                android:clickable="true"
                                android:onClick="deckTapped"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/back" />

                        <ImageButton
                                android:id="@+id/spot_waste"
                                android:layout_width="45dp"
                                android:layout_height="65dp"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="1"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toRightOf="@+id/spot_deck"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/c2" />

                        <ImageView
                                android:id="@+id/spot_clubs"
                                android:layout_width="45dp"
                                android:layout_height="65dp"
                                android:layout_marginLeft="32dp"
                                android:layout_weight="1"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toRightOf="@+id/spot_waste"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/spot" />

                        <ImageView
                                android:id="@+id/spot_hearts"
                                android:layout_width="45dp"
                                android:layout_height="65dp"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="1"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toRightOf="@+id/spot_clubs"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/spot" />

                        <ImageView
                                android:id="@+id/spot_diamonds"
                                android:layout_width="45dp"
                                android:layout_height="65dp"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="1"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toRightOf="@+id/spot_hearts"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/spot" />

                        <ImageButton
                                android:id="@+id/spot_spades"
                                android:layout_width="45dp"
                                android:layout_height="65dp"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="1"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toRightOf="@+id/spot_diamonds"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/spot" />

                        <TextView
                                android:id="@+id/textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Moves: 0"
                                android:textColor="#FFFFFF"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/spot_spades"
                                app:layout_constraintTop_toTopOf="parent" />

                        <Button
                                android:id="@+id/Menu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:onClick="menuButtonTapped"
                                android:text="Menu"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/spot_spades"
                                app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>